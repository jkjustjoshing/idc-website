---
import { FORM_URL } from '@/utils/formUtils'
---

<form
  action={FORM_URL}
  method="post"
  x-data="formData"
  x-on:submit.prevent="onSubmit"
>
  <input name="Name" type="text" placeholder="Name" />
  <input name="Email" type="email" placeholder="Email" />
  <button>Submit</button>

  <div x-show="isLoading">Loading...</div>
  <div x-show="isSuccess">
    SUCCESS. See <a
      target="_blank"
      href="https://docs.google.com/spreadsheets/d/1g7p5ylPlTzDU6BVUnHhoZ88rX-epaHkYZQo3lGgIH6E/edit#gid=0"
      >https://docs.google.com/spreadsheets/d/1g7p5ylPlTzDU6BVUnHhoZ88rX-epaHkYZQo3lGgIH6E/edit#gid=0</a
    > for form submissions.
  </div>
</form>
<script>
  import { submitForm } from '@/utils/formUtils'
  declare global {
    var Alpine: any
  }
  document.addEventListener('alpine:init', () => {
    Alpine.data('formData', (aa) => {
      return {
        isLoading: false,
        isSuccess: false,
        async onSubmit(event) {
          event.preventDefault()
          const target = event.target
          this.isLoading = true
          const response = await submitForm(target)
          this.isLoading = false
          this.isSuccess = true
        },
      }
    })
  })
</script>

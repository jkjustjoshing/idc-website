---
import { SocialMediaLinks } from '../SocialMediaLinks'
import { pages } from '../../pages'
import logo from '../../img/logos/primary-dark.png'
import mobileLogo from '../../img/logos/secondary-dark.png'

const url = Astro.url.pathname
---

<header class={`sticky top-0 backdrop-blur-md bg-[#fffd] w-full z-10`}>
  <nav
    aria-label="Main navigation"
    class="flex items-center justify-center lg:justify-between lg:px-0 lg:py-0"
    x-data="{ isOpen: false, childOpen: [] }"
    x-on:click.away="isOpen = false"
    x-on:keydown.escape="isOpen = false"
  >
    <!--Logo etc-->
    <div
      class="flex items-center p-3 pr-[30px] lg:p-4 lg:pr-20 hero-img after:bg-brand before:bg-brand"
    >
      <a href="/" class="text-indigo-500 font-bold text-lg">
        <picture
        >
        <source media="(width < 960px)" srcset={mobileLogo.src} />
        <img src={logo.src} class="max-h-16 max-w-none w-auto lg:max-h-24 md:max-h-16"
        alt="Irondequoit Democratic Committee" />
        </picture>
      </a>
    </div>

    <!--Toggle button (hidden on large screens)-->
    <button
      x-on:click="isOpen = !isOpen"
      type="button"
      class="z-10 ml-auto block lg:hidden p-6 px-2 text-primary-500 hover:text-primary-500 focus:text-primary-500"
      x-bind:class="{ 'transition transform-180': isOpen }"
      x-bind:aria-expanded="isOpen ? 'true' : 'false'"
      aria-label="Menu"
    >
      <svg
        class="h-10 w-10 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
      >
        <path
          x-show="isOpen"
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
        ></path>
        <path
          x-show="!isOpen"
          fill-rule="evenodd"
          d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
        ></path>
      </svg>
    </button>

    <!--Menu-->
    <div
      class=`
        flex-grow
        absolute
        max-lg:bg-brand
        px-4
        lg:pr-6
        right-0
        top-0
        w-80
        max-w-full
        backdrop
        lg:w-full
        lg:flex
        lg:items-center
        lg:w-auto
        lg:static
        lg:text-center
        max-lg:h-screen
        max-lg:pt-16
      `
      x-bind:class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
      x-show.transition="true"
    >
      <ul
        class=`
          pt-6
          list-reset
          list-none
          justify-end
          flex-1
          items-center
          mb-0
          lg:flex
          lg:pt-0
        `
      >
        {
          pages.map((item) => {
            const isCurrent = item.href === url
            return (
              <li
                class={`
                ml-0
                mr-3
                group
                text-left
                max-lg:border-b-2
              border-brand
                divide-y-0
              `}
              >
                <a
                  x-on:click="isOpen = false"
                  class={`
                      text-base
                      font-normal
                      block
                      no-underline
                      py-2
                      lg:px-4
                      select-none
                      text-white
                      hover:text-gray-300
                      focus:text-gray-300
                      lg:text-lg
                      lg:font-semibold
                      lg:text-gray-500
                      lg:hover:text-indigo-500
                      lg:focus:text-indigo-500
                      ${isCurrent ? 'text-brand' : ''}
                    `}
                  aria-current={isCurrent ? 'page' : undefined}
                  href={item.href}
                >
                  {item.name}{' '}
                  {item.children && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="ml-1 w-4 h-4 inline-block pointer-events-none"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="m19.5 8.25-7.5 7.5-7.5-7.5"
                      />
                    </svg>
                  )}
                </a>
                {item.children && (
                  <ul
                    class={`
                    hidden
                    group-hover:block
                    group-focus-within:block
                    lg:absolute
                    text-left
                    list-reset
                    list-none
                    lg:shadow-lg
                  lg:bg-white
                  `}
                  >
                    {item.children.map((child) => {
                      const isCurrent = child.href === url
                      return (
                        <li class="">
                          <a
                            x-on:click="isOpen = false"
                            class={`
                              text-ml
                              block
                              no-underline
                              py-2
                              px-4
                              text-white
                              hover:text-gray-300
                              focus:text-gray-300
                              lg:text-gray-500
                              lg:hover:text-gray-400
                              lg:focus:text-indigo-400
                              ${isCurrent ? 'text-brand' : ''}
                            `}
                            aria-current={isCurrent ? 'page' : undefined}
                            href={child.href}
                          >
                            {child.name}
                          </a>
                        </li>
                      )
                    })}
                  </ul>
                )}
              </li>
            )
          })
        }
      </ul>
      <div>
        <a
          class={`
          relative
          top-6
          lg:top-1
          mb-3
          py-2
          px-4
          rounded-md
          text-ml
          inline-block
          no-underline
          focus:text-gray-200
          select-none
          text-white
          hover:text-gray-800
          bg-brand-light
          hover:bg-white
          lg:bg-brand
          lg:hover:bg-brand-light
          lg:hover:text-white
          lg:mt-0
          `}
          href="https://secure.actblue.com/donate/idc">Donate to the IDC</a
        >
      </div>
      <div
        class={`
          mt-12
          lg:hidden
        `}
      >
        <SocialMediaLinks />
      </div>
    </div>
  </nav>
</header>
